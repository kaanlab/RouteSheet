<MudDialog>
     <TitleContent>
        <MudText Typo="Typo.h6" Color="Color.Info">
            <MudIcon Icon="@Icons.Material.Filled.Face" Title="@MudDialog.Title" />
            @MudDialog.Title
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudText>@Context.Name</MudText>
        <MudText>@Context.Classroom.Name</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Отменить</MudButton>
        <MudButton Color="Color.Secondary" Variant="Variant.Filled" OnClick="Delete">Удалить</MudButton>
    </DialogActions>
</MudDialog>

@code { 
    
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    [Parameter] public CadetViewModel Context { get; set; }

    void Delete() => MudDialog.Close(DialogResult.Ok(Context));
    void Cancel() => MudDialog.Cancel(); 
}
