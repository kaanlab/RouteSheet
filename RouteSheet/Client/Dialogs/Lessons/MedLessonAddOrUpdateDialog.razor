<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6" Color="Color.Error">
            <MudIcon Icon="@Icons.Material.Filled.AddCircle" Title="@MudDialog.Title" />
            @MudDialog.Title
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudDatePicker Label="Дата занятия" @bind-Date="Context.Date" Orientation="Orientation.Landscape" DisableToolbar="true" />
        <MudTextField T="string" Label="Время и причина обращения" @bind-Text="Context.Title" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Отмена</MudButton>
        <MudButton Variant="Variant.Outlined" Color="Color.Success" OnClick="AddOrUpdate">Добавить</MudButton>
    </DialogActions>
</MudDialog>

@code {

    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    [Parameter] public Lesson Context { get; set; } = new Lesson();

    public void AddOrUpdate()
    {
        Context.Hour = 5;
        Context.Prioriy = Priority.Normal;
        //add AppUser!!!
        MudDialog.Close(DialogResult.Ok(Context));
    }

    private void Cancel() => MudDialog.Cancel();
}